<h1>
  Add a new scheduled reminder
</h1>

<hr>

<%= render("scheduled_reminder_templates/validation_failures.html.erb") %>

<form action="/insert_scheduled_reminder_record" method="post">
  <div>
    <label for="send_at">
      Send at
    </label>

    <input type="text" id="send_at" name="send_at" value="<%= @scheduled_reminder.send_at %>">
  </div>

  <button>
    Create scheduled reminder
  </button>
</form>

<hr>

<a href="/scheduled_reminders">
  Go back
</a>
